{% extends 'base.html.twig' %}

{% block meta_description %}
	Page d'aministration du blog créé par Julien web&co développeur web freelance
{% endblock %}

{% block title %}
	Administration
{% endblock %}

{% block body %}
	<main class="mb-48">
		<article class="container m-auto ">
			<h1 class="text-center text-2xl mt-4 mb-4 text-gray-900 dark:text-gray-300">
				{% block h1 %}
					{{ titleH1|default('Administration') }}
				{% endblock %}
			</h1>
			<!-- drawer init and show -->
			<div class="text-center">
				<button class="text-white bg-gray-700 hover:bg-gray-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 dark:bg-gray-700 border border-gray-300 dark:hover:bg-gray-400 focus:outline-none dark:focus:ring-gray-700" type="button" data-drawer-target="drawer-navigation" data-drawer-show="drawer-navigation" aria-controls="drawer-navigation">
					Afficher le menu
				</button>
			</div>
			{% include 'partials/_adminNav.html.twig' %}
			<!-- drawer component -->
			{% block content %}{% endblock %}
		</article>
	</main>
{% endblock %}