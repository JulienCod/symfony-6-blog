{% extends 'base.html.twig' %}

{% block title %}Article
	{{article.title}}
{% endblock %}

{% block body %}
	<main class="mb-48">
		<section class="container m-auto">
			<h1 class="text-2xl text-center mt-4 mb-4">Article {{article.title}}</h1>
			<div class="flex justify-center">
				<img src="{{ asset('assets/uploads/articles/' ~ article.image)}}" alt=""/>
			</div>
            <div class="flex justify-around mt-4 mb-4">
                <p>
                    Auteur : {{article.author}}
                </p>
                <p>
                {% for category in article.category %}
                    Catégorie : {{ category.name }}
                {% endfor %}
                </p>
                <p>
                    publié le : {{ article.createdAt|date('d-m-Y H:i:s') }}
                </p>
            </div>
			<div class="">
                {{ article.content|nl2br }}
            </div>
		</section>
	</main>

{% endblock %}
