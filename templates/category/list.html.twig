{% extends 'base.html.twig' %}

{% block title %}Liste des articles de la catégorie
	{{category.name}}
{% endblock %}

{% block body %}
	<main class="py-8 mb-48">

		<article
			class="container mx-auto px-4">
			<!-- Section des articles récents -->
			<section class="mb-8 text-gray-800 dark:text-gray-300">
				<h2 class="text-2xl font-bold mb-4 mt-4 text-center">Liste des articles de la catégorie
					{{category.name}}</h2>
				<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
					{% for article in articles %}
						{% if article.status == "Actif" %}
							<div class="block rounded-lg bg-white shadow-[0_2px_15px_-3px_rgba(0,0,0,0.07),0_10px_20px_-2px_rgba(0,0,0,0.04)] dark:bg-gray-600">
								<div class="relative overflow-hidden bg-cover bg-no-repeat" data-te-ripple-init data-te-ripple-color="light">
									<img class="rounded-t-lg m-auto" src="{{ asset('assets/uploads/articles/mini/300x300-' ~ article.image)}}" alt=""/>
								</div>
								<div class="p-6">
									<h5 class="mb-2 text-xl font-medium leading-tight dark:text-gray-300">
										{{ article.title}}
									</h5>
									<a href="{{ path('article_details', {"slug":article.slug})}}" type="button" class="text-white bg-gray-700 hover:bg-gray-800 focus:ring-4 focus:ring-blue-300 font-medium
				 rounded-lg text-sm px-5 py-2.5 mr-2 dark:bg-gray-700 border border-gray-300 dark:hover:bg-gray-400
				  focus:outline-none dark:focus:ring-gray-700">
										Voir l'article
									</a>
								</div>
							</div>
						{% endif %}
					{% endfor %}
				</div>
			</section>
		</article>
	</main>
{% endblock %}
