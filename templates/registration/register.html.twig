{% extends 'base.html.twig' %}

{% block title %}Créer un compte{% endblock %}

{% block body %}
    {% include "partials/modal/_register.html.twig" %}
	<main class="bg-gray-600 flex-grow flex flex-col justify-center items-center px-6 py-8 md:h-full lg:py-0">
		<section class="w-full p-8 bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
			<div class="p-6 space-y-4 md:space-y-6 sm:p-8">
				<h2 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">Créer un compte</h2>
					{{form_start(registrationForm)}}
					{{ form_row(registrationForm.lastname)}}
					{{ form_row(registrationForm.firstname)}}
					{{ form_row(registrationForm.email)}}
					{% for message in app.flashes('error-mail')%}
						<div class="bg-red-400 p-4 ">
							<span class="text-red-800 font-medium">
								{{ message }}
							</span>
						</div>
					{% endfor %}
					{{ form_row(registrationForm.plainPassword)}}
					{{ form_row(registrationForm.RGPDConsent)}}
					{{ form_row(registrationForm.submit)}}


					{{form_end(registrationForm)}}
				<div class="w-full px-4 text-center">
					<p>Déjà inscrit ?
						<a type="button" class="cursor-pointer font-medium text-primary-600 hover:underline dark:text-primary-500" data-modal-target="authentication-modal" data-modal-toggle="authentication-modal">
							Se connecter
						</a>
					</p>
				</div>
			</div>
		</section>
	</main>

{% endblock %}
